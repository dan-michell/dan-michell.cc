---
import { Icon } from 'astro-icon/components'

interface Props {
	href: string,
	displayName?: string,
	iconName: string
	size: string
}

const {href, displayName, iconName, size} = Astro.props
---

<div>
	<a href={href} class="flex items-center gap-1"><Icon name={iconName} class={`${size} hover:scale-110 transition-all`} /><p class="">{displayName}</p></a>
</div>
